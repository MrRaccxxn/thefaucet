{
  "name": "@thefaucet/contracts",
  "version": "0.0.1",
  "private": true,
  "description": "Smart contracts for the multichain faucet",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "forge build",
    "test": "forge test",
    "test:gas": "forge test --gas-report",
    "test:coverage": "forge coverage",
    "lint": "forge fmt --check",
    "lint:fix": "forge fmt",
    "deploy:local": "forge script script/Deploy.s.sol --rpc-url http://localhost:8545 --broadcast",
    "deploy:sepolia": "forge script script/Deploy.s.sol --rpc-url $SEPOLIA_RPC_URL --broadcast --verify",
    "deploy:amoy": "forge script script/Deploy.s.sol --rpc-url $AMOY_RPC_URL --broadcast --verify",
    "deploy:bsc-testnet": "forge script script/Deploy.s.sol --rpc-url $BSC_TESTNET_RPC_URL --broadcast --verify",
    "verify": "forge verify-contract",
    "clean": "forge clean",
    "check-types": "echo 'Contracts type check - Will be configured with TypeScript files'"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0"
  },
  "devDependencies": {
    "@thefaucet/eslint-config": "workspace:*",
    "@thefaucet/typescript-config": "workspace:*",
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
