{
  "compilerOptions": {
    // Output
    "outDir": "./dist",
    "rootDir": "./src",
    
    // Type Checking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    
    // Module Resolution
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    
    // Language Features
    "target": "ES2022",
    "lib": ["ES2022"],
    
    // Declaration Files
    "declaration": true,
    "declarationMap": true,
    
    // Other
    "isolatedModules": true,
    "incremental": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "scripts"]
}

