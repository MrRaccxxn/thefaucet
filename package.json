{
  "name": "thefaucet",
  "version": "0.1.0",
  "private": true,
  "description": "Multichain faucet for EVM-compatible testnets with GitHub OAuth and redeem codes",
  "keywords": ["faucet", "multichain", "ethereum", "testnet", "web3", "blockchain"],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:web": "pnpm --filter @thefaucet/web dev",
    "build:web": "pnpm --filter @thefaucet/web build",
    "start:web": "pnpm --filter @thefaucet/web start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "check-types": "turbo run check-types",
    "clean": "turbo run clean",
    "db:generate": "pnpm --filter @thefaucet/db db:generate",
    "db:migrate": "pnpm --filter @thefaucet/db db:migrate",
    "db:studio": "pnpm --filter @thefaucet/db db:studio",
    "docker:up": "docker-compose -f infra/docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f infra/docker/docker-compose.yml down",
    "docker:restart": "pnpm docker:down && pnpm docker:up",
    "docker:logs": "docker-compose -f infra/docker/docker-compose.yml logs -f",
    "docker:clean": "docker-compose -f infra/docker/docker-compose.yml down -v --remove-orphans && docker system prune -f",
    "docker:status": "docker-compose -f infra/docker/docker-compose.yml ps",
    "setup": "bash scripts/setup.sh"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
